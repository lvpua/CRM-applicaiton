<AnchorPane prefHeight="600.0" prefWidth="518.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateCustomerController">
   <children>
      <Label layoutX="114.0" layoutY="24.0" prefWidth="290.0" text="UPDATE CUSTOMER">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <VBox layoutX="210.0" layoutY="100.0" prefWidth="150.0" spacing="25.0">
         <children>
            <TextField fx:id="idText" disable="true" />
            <TextField fx:id="nameText" />
            <TextField fx:id="addressText" />
            <ComboBox fx:id="countryComboBox" onAction="#onActionDivision" prefWidth="150.0" />
            <ComboBox fx:id="divisionComboBox" prefWidth="150.0" />
            <TextField fx:id="postalCodeText" />
            <TextField fx:id="phoneText" />
         </children>
      </VBox>
      <VBox alignment="CENTER_RIGHT" layoutX="60.0" layoutY="100.0" prefHeight="200.0" prefWidth="121.0" spacing="25.0">
         <children>
            <Label prefHeight="25.0" text="Customer ID:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label prefHeight="25.0" text="Customer Name:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label prefHeight="25.0" text="Address:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label prefHeight="25.0" text="Country:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="divisionSwitchLabel" prefHeight="25.0" text="Division:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button layoutX="143.0" layoutY="474.0" mnemonicParsing="false" onAction="#onActionUpdateCustomer" prefHeight="29.0" prefWidth="246.0" text="SAVE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="430.0" layoutY="556.0" mnemonicParsing="false" onAction="#onActionCancelUpdate" prefHeight="25.0" prefWidth="73.0" text="CANCEL">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="119.0" layoutY="354.0" prefHeight="25.0" text="Phone:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="91.0" layoutY="404.0" prefHeight="25.0" text="Postal Code:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
