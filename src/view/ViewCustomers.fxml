<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewCustomersController">
    <children>
        <Button layoutX="58.0" layoutY="85.0" mnemonicParsing="false" onAction="#onActionGoToAddCustomerScreen" prefHeight="30.0" prefWidth="170.0" text="Add Customer">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label layoutX="411.0" layoutY="14.0" text="CUSTOMERS">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Button layoutX="815.0" layoutY="550.0" mnemonicParsing="false" onAction="#onActionGoToMainMenu" prefHeight="36.0" prefWidth="170.0" text="Main Menu">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <TableView fx:id="customerTable" layoutX="10.0" layoutY="143.0" prefHeight="390.0" prefWidth="980.0">
            <columns>
                <TableColumn fx:id="idColumn" minWidth="100.0" prefWidth="163.33" text="Customer_ID" />
                <TableColumn fx:id="nameColumn" prefWidth="163.33" text="Customer_Name" />
                <TableColumn fx:id="addressColumn" prefWidth="163.33" text="Address" />
                <TableColumn fx:id="divisionColumn" prefWidth="163.33" text="Division" />
                <TableColumn fx:id="postalCodeColumn" prefWidth="163.33" text="Postal_Code" />
                <TableColumn fx:id="phoneColumn" prefWidth="163.35" text="Phone" />
            </columns>
        </TableView>
        <Button layoutX="726.0" layoutY="85.0" mnemonicParsing="false" onAction="#onActionDeleteCustomer" prefHeight="30.0" prefWidth="190.0" text="Delete Customer">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button layoutX="390.0" layoutY="85.0" mnemonicParsing="false" onAction="#onActionGoToUpdateCustomerScreen" prefHeight="30.0" prefWidth="200.0" text="Update Customer">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
